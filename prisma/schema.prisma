generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int           @id @default(autoincrement())
  username     String        @db.VarChar(50)
  first_name   String        @db.VarChar(50)
  last_name    String        @db.VarChar(50)
  email        String        @unique
  created_at   DateTime      @default(now()) @db.Timestamptz()
  userPassword UserPassword?

  tokens           Token[]
  userPhotos       UserPhoto[]
  userConfirmation UserConfirmation?
  createdPosts     Post[]            @relation("CreatedPosts")
  ownedPosts       Post[]            @relation("OwnedPosts")
  role             Role?
}

model UserPassword {
  user_id  Int    @id @unique
  password String @db.VarChar(255)

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Token {
  id         Int      @id @default(autoincrement())
  token      String   @db.VarChar(255)
  created_at DateTime @default(now()) @db.Timestamptz()
  user_id    Int

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model UserPhoto {
  id          Int      @id @default(autoincrement())
  url         String   @db.VarChar(255)
  uploaded_at DateTime @default(now()) @db.Timestamptz()
  isMain      Boolean  @default(false)
  user_id     Int

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model UserConfirmation {
  id              Int     @id @default(autoincrement())
  activation_link String  @db.VarChar(255)
  is_activated    Boolean @default(false)
  user_id         Int     @unique

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String?  @db.VarChar(255)
  content    String   @db.Text()
  created_at DateTime @default(now()) @db.Timestamptz()
  creator    Int
  owner      Int

  createdBy  User        @relation("CreatedPosts", fields: [creator], references: [id], onDelete: Cascade)
  ownedBy    User        @relation("OwnedPosts", fields: [owner], references: [id], onDelete: Cascade)
  postPhotos PostPhoto[]
}

model PostPhoto {
  id      Int     @id @default(autoincrement())
  url     String  @db.VarChar(255)
  caption String? @db.VarChar(255)
  aws_key String? @db.VarChar(255)

  post_id Int
  post    Post @relation(fields: [post_id], references: [id], onDelete: Cascade)
}

enum RoleType {
  USER
  ADMIN
  MODERATOR
}

model Role {
  user_id Int      @id @unique
  role    RoleType

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}
